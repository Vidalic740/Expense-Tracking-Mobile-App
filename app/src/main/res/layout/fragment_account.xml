<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accountFragment"
    tools:context=".AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#161614"
        tools:ignore="UselessParent, UselessLeaf">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:id="@+id/toolbar"
            android:background="@color/lavender"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            tools:ignore="ScrollViewCount">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:id="@+id/profile_image"
            android:padding="10dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/circular_background"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_email"
            android:layout_below="@id/profile_name"
            android:layout_marginTop="5dp"
            android:text="@string/profile_email"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:gravity="center"/>

        <TextView
            android:id="@+id/edit_profile"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_below="@id/profile_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_ground"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/edit_profile"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account"
            android:layout_below="@+id/edit_profile"
            android:text="@string/account"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_number_title"
            android:layout_below="@+id/account"
            android:text="@string/account_number"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_number"
            android:layout_below="@+id/account"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_email"
            android:layout_below="@+id/account_number_title"
            android:text="@string/email"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_number"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:textColorHint="@color/sky_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_number"
            android:layout_below="@+id/account_email"
            android:text="@string/phone_number"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            android:layout_below="@+id/phone_number"
            android:textColor="@color/lavender"
            android:layout_marginStart="18dp"/>

        <TextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_number"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:hint="@string/change"
            android:textColorHint="@color/sky_blue"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_date"
            android:layout_below="@+id/number"
            android:text="@string/reg_date"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_date"
            android:layout_below="@+id/change"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/personal_info"
            android:layout_below="@+id/reg_date"
            android:text="@string/personal_information"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginStart="16dp"
            android:layout_marginTop="34dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/middle_name"
          android:layout_below="@+id/personal_info"
          android:text="@string/middle_name"
          android:textColor="@color/gray"
          android:textSize="14sp"
          android:layout_marginTop="25dp"
          android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_info"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birth_date"
            android:layout_below="@+id/middle_name"
            android:text="@string/date_of_birth"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dates"
            android:layout_below="@+id/name_detail"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/country"
            android:layout_below="@+id/birth_date"
            android:text="@string/country"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/country_name"
            android:layout_below="@+id/dates"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_below="@+id/country"
            android:text="@string/city"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_name"
            android:layout_below="@+id/country_name"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_marginTop="134dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="128dp"
                    android:contentDescription="@string/add_item" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>